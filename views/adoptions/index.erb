<h1>Adoptions</h1>

<p><a href="/new">New Adoption Request</a></p>

<div class="grid">
  <div class="grid-row">
    <% @adoptions.each do |adoption| %>
    <div class="cell">First name: <%= adoption.owners.first_name %></div>
    <div class="cell">Second_name: <%= adoption.owners.second_name %></div>
    <div class="cell">Animal Name: <%= adoption.animal.name %></div>
    <div class="cell">Animal Age: <%= adoption.animal.age %></div>
  </div>
</div>
<hr>
<% end %>

