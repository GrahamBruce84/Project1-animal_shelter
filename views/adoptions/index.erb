<h1>Adoptions</h1>

<p><a href="/adoptions/new">New Adoption Request</a></p>

<div class="grid">
  <div class="grid-row">
    <% @adoptions.each do |adoption| %>
    <div class="cell">First name: <%= adoption.owner.first_name %></div>
    <div class="cell">Second_name: <%= adoption.owner.second_name %></div>
    <p>Adopted</p>
    <div class="cell">Pet Name: <%= adoption.animal.name %></div>
  </div>
</div>
<hr>
<% end %>

